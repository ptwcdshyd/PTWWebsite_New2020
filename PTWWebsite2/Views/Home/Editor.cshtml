<style>
    /* Loader Start*/

    #PostBackMsg, #PostBackMsg-1 {
        position: absolute;
        top: 0;
        height: 100%;
        width: 100%;
        display: block;
        background: rgba(255, 255, 255, 0.6509803921568628);
        z-index: 1001;
    }

        #PostBackMsg img, #PostBackMsg-1 img {
            position: absolute;
            top: 50%;
            left: 50%;
            max-width: 100%;
            height: auto;
        }

    /* Loader End*/

</style>
<div id="PostBackMsg" style="display:none;">

    <img alt="loader" src="~/images/loader.gif" />

</div>
@*@Html.Raw(ViewBag.HomeContent)*@
<select class="my-3" id="Modules" name="" onchange="GetContent()">
    <option value="">Select Module</option>
    <option value='1'>HeaderMenu</option>
    <option value='2'>Footer</option>
    <option value='3'>Home</option>
</select>

<select class="my-3" id="Languages" name="" onchange="GetContent()">
    <option value="">Select Language</option>
    <option value='1'>English</option>
    @*<option value='2'>Footer</option>
        <option value='3'>Home</option>*@
</select>
<br />
<div id="summernote"></div>
<div>
    <input type="button" id="Update" onclick="UpdateContent()" value="Update" />
</div>




<script>
    $('#summernote').summernote({
        placeholder: 'Hello Bootstrap 4',
        tabsize: 2,
        height: 100,
        dialogsInBody: true
    });
    var model = @Html.Raw(Json.Serialize(@ViewBag.HomeContent));

    //$('#summernote').summernote('code', model);

    $(document).ready(function () {
    });


    function GetContent() {

        if ($("#Languages").children("option:selected").val() > 0 && $("#Modules").children("option:selected").val() > 0) {
            $("#PostBackMsg").show();
            $('#summernote').summernote('code', '')
            $.ajax({
                type: "GET",
                url: '../Home/GetContent?ModuleId=' + parseInt($("#Modules").children("option:selected").val()) + '&LanguageId=' + parseInt($("#Languages").children("option:selected").val()) + '',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {

                    if (result == 'Logout') {
                        window.location = '../Logout';
                    }
                    $('#summernote').summernote('code', result);
                    $("#PostBackMsg").fadeOut("slow");
                },

                error: function (err) {
                    if (err.status === 0) {
                        window.location = '../Logout';
                    }
                    $("#PostBackMsg").fadeOut("slow");
                }
            });
        }
    }


    function UpdateContent() {

        if ($("#Languages").children("option:selected").val() > 0 && $("#Modules").children("option:selected").val() > 0) {
            $("#PostBackMsg").show();
            var objReq= {
                ModuleId: parseInt($("#Modules").children("option:selected").val()),
                LanguageId: parseInt($("#Languages").children("option:selected").val()),
                Content: $('#summernote').summernote('code')
            }

            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateContentByModelIdAndLanguageId", "Home")',
                data: JSON.stringify(objReq),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {

                    if (result == 'Logout') {
                        window.location = '../Logout';
                    }
                    $('#summernote').summernote('code', result);
                    //$("#PostBackMsg").fadeOut("slow");
                },

                error: function (err) {
                    if (err.status === 0) {
                        window.location = '../Logout';
                    }
                     $("#PostBackMsg").fadeOut("slow");
                }
            });
        }
        else {
            return false;
        }
    }

</script>



