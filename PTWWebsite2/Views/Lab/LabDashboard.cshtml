    function Preview() {
        if ($("#Languages").children("option:selected").val() != "Please select") {
            var fd = new FormData();
            var files1 = $('#LabImage')[0].files[0];
            var files2 = $('#LabHeader')[0].files[0];
            if ($('#LabImage')[0].files[0] != undefined) {
