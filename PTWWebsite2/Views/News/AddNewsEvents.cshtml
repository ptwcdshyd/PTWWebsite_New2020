
@{
    Layout = "~/Views/Shared/_LayoutForPtwCms.cshtml";
    ViewData["Title"] = "NewsEventsEditor";
}

<link href="~/css/Editor/Css/4.4.1.bootstrap.min.css" rel="stylesheet" />
<link href="~/css/jquery.gritter.css" rel="stylesheet" />
<script src="~/js/Editor/jquery-3.5.1.min.js"></script>
<script src="~/js/Editor/popper.min.js"></script>
<script src="~/js/Editor/1.9.1.jquery.js"></script>
<script src="~/js/Editor/4.4.1.bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="~/js/Editor/summernote-bs4.min.js"></script>
<script src="~/js/jquery.gritter.min.js"></script>

<style>
    /* Loader Start*/

    #PostBackMsg, #PostBackMsg-1 {
        position: absolute;
        top: 0;
        height: 100%;
        width: 100%;
        display: block;
        background: rgba(255, 255, 255, 0.6509803921568628);
        z-index: 1001;
    }

        #PostBackMsg img, #PostBackMsg-1 img {
            position: absolute;
            top: 50%;
            left: 50%;
            max-width: 100%;
            height: auto;
        }

    /* Loader End*/

    #ModuleId {
        outline: 0;
        background-image: none;
        width: 100%;
        height: 100%;
        color: black;
        cursor: pointer;
        border: 1px solid black;
        border-radius: 15px;
        padding: 6px 6px 6px 6px;
    }

    #LanguageCode {
        outline: 0;
        background-image: none;
        width: 100%;
        height: 100%;
        color: black;
        cursor: pointer;
        border: 1px solid black;
        border-radius: 15px;
        padding: 6px 6px 6px 6px;
    }

    #lblMessage {
        display: inline-block;
        margin-bottom: .5rem;
        color: red;
        white-space: nowrap;
        padding-left: 20px;
        display: none;
    }

    .form-group {
        margin-bottom: 1rem;
        padding-right: 30px;
        padding-left: 30px;
        margin-top: 2rem;
    }

    .mandatory {
        color: red;
    }

    #NewsList {
        width: 75%;
        margin-left: 4rem;
    }
</style>
<div id="PostBackMsg" style="display:none;">
    <img alt="loader" src="~/images/loader.gif" />
</div>

<div class="page-header" style="text-align: center;">
    <h3>Add News / Events</h3>
</div>

<div class="contentpanel report" style="border: 1px solid #00b8ff85;width: 1180px;margin-top: 45px;margin-left:50px;">
    <div class="row distribute-container">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="row">
                <div class="form-group col-md-4 col-sm-4">
                    <label for="name">Selection Type</label>
                    <select class="form-control input-sm" id="Event">
                        <option value="0">News</option>
                        <option value="1">Events</option>
                    </select>
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    <label>News Title<span class="mandatory">*</span></label>
                    <input type="text" id="NewsTitle" class="form-control input-sm" placeholder="News Title">
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4 col-sm-4">
                    <label>Url<span class="mandatory">*</span></label>
                    <input type="text" id="UrlTitle" class="form-control input-sm" placeholder="Url Title">
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    <label>Published Date<span class="mandatory">*</span></label>
                    <input type="date" id="PublishedDate" class="form-control input-sm" placeholder="Published Date">
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-12 col-md-12 col-sm-12">
                    <label>Description<span class="mandatory">*</span></label>
                    <textarea id="Description" class="form-control input-sm">  </textarea>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4 col-sm-4">
                    <label>Topic</label>
                    <input type="text" id="Topic" class="form-control input-sm" placeholder="">
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    <label for="mobile">Event StartDate</label>
                    <input type="date" id="EventStartDate" class="form-control input-sm" placeholder="Event StartDate">
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    <label for="mobile">Event EndDate</label>
                    <input type="date" id="EventEndDate" class="form-control input-sm" placeholder="Event EndDate">
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4 col-sm-4">
                    @Html.CheckBox("OnNewWebsiteNow", true)
                    <label>OnNewWebsiteNow </label>
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    @Html.CheckBox("SuitedForHomePage", false)
                    <label>SuitedForHomePage</label>
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    @Html.CheckBox("CustomerExperience", false)
                    <label>CustomerExperience</label>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4 col-sm-4">
                    @Html.CheckBox("QualityAssurance", false)
                    <label>QualityAssurance</label>
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    @Html.CheckBox("Localization", false)
                    <label>Localization</label>
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    @Html.CheckBox("AudioProduction", false)
                    <label>AudioProduction</label>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4 col-sm-4">
                    @Html.CheckBox("Engineering", false)
                    <label>Engineering</label>
                </div>
                <div class="form-group col-md-4 col-sm-4">
                    @Html.CheckBox("ActiveStatus", true)
                    <label>Active</label>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-8 col-sm-8">
                    <label class="col-form-label">HeaderImage<span class="mandatory">*</span></label>
                    <div class="col-sm-8">
                        <div class="custom-file">
                            <input id="HeaderImage" type="file" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...1520x445 dimensions</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-8 col-sm-6">
                    <label class="col-form-label">Longer Image<span class="mandatory">*</span></label>
                    <div class="col-md-8 col-sm-6">
                        <div class="custom-file">
                            <input id="LongerImage" type="file" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...1012x348 dimensions</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-8 col-sm-6">
                    <label class="col-form-label">Shorter Image<span class="mandatory">*</span></label>
                    <div class="col-md-8 col-sm-6">
                        <div class="custom-file">
                            <input id="ShorterImage" type="file" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...504x348 dimensions</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-8 col-sm-6">
                    <div class="form-group col-md-4 col-sm-4">
                        <label>Meta Title</label>
                        <input type="text" id="MetaTitle" class="form-control input-sm" placeholder="Meta Title">
                    </div>
                    <div class="form-group col-lg-8  col-md-6 col-sm-4">
                        <label>Meta Description</label>
                        <textarea id="MetaDescription" class="form-control input-sm"></textarea>
                    </div>
                    <div class="form-group col-lg-8  col-md-6 col-sm-4">
                        <label>Meta Url</label>
                        <textarea id="MetaUrl" class="form-control input-sm"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="row distribute-container">
            <div class="col-md-2" style="margin-top:40px;margin-left:98px;margin-bottom:15px;display:flex">                
                <button onclick="AddNews();" class="btn btn-success">Add News</button>
            </div>
        </div>
    </div>
</div>





<script>
    $('#Description').summernote({
        placeholder: 'News or Events here',
        tabsize: 2,
        height: 300,
        dialogsInBody: true
    });

    $('#summernoteUpdate').summernote({
        placeholder: 'News or Events here',
        tabsize: 2,
        height: 300,
        dialogsInBody: true
    });

    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileLabel = $(this).next('.custom-file-label');
            var files = $(this)[0].files;
            if (files.length > 1) {
                fileLabel.html(files.length + ' files selected');
            }
            else if (files.length == 1) {
                fileLabel.html(files[0].name);
            }
        });

    });

    function AddNews() {
        if (Validate()) {
            
            
            var fd = new FormData();
            var files1 = $('#HeaderImage')[0].files[0];
            var files2 = $('#LongerImage')[0].files[0];
            var files3 = $('#ShorterImage')[0].files[0];
            fd.append(files1.name, files1);
            fd.append(files2.name, files2);
            fd.append(files3.name, files3);

            fd.append('NewsTitle', $("#NewsTitle").val());
            fd.append('UrlTitle', $("#UrlTitle").val());
            fd.append('PublishedDate', $("#PublishedDate").val());
            fd.append('Description', $("#Description").val());
            fd.append('Topic', $("#Topic").val());
            fd.append('EventStartDate', $("#EventStartDate").val());
            fd.append('EventEndDate', $("#EventEndDate").val());
            fd.append('Event', parseInt($("#Event").val()));
            fd.append('OnNewWebsiteNow', $("#OnNewWebsiteNow").prop("checked"));
            fd.append('SuitedForHomePage', $("#SuitedForHomePage").prop("checked"));
            fd.append('CustomerExperience', $("#CustomerExperience").prop("checked"));
            fd.append('QualityAssurance', $("#QualityAssurance").prop("checked"));
            fd.append('Localization', $("#Localization").prop("checked"));
            fd.append('AudioProduction', $("#AudioProduction").prop("checked"));
            fd.append('Engineering', $("#Engineering").prop("checked"));
            fd.append('ActiveStatus', $("#ActiveStatus").prop("checked"));
            fd.append('MetaTitle', $("#MetaTitle").val());
            fd.append('MetaDescription', $("#MetaDescription").val());
            fd.append('MetaUrl', $("#MetaUrl").val());
            console.log(fd);           
            
            $.ajax({
                    type: "POST",
                    url: '@Url.Action("AddNews", "Newss")',
                    data: fd,                    
                    contentType: false,
                    processData: false,                    
                    success: function (result) {                        
                        console.log(result);
                        if (result == 'Logout') {
                        window.location = '../Logout';
                    }
                        if (result == 1) {
                        var alertmsg = "Successfully Added";
                        AlertMessage('growl-success', 'Information', alertmsg, false, 3000);
                        $("#PostBackMsg").fadeOut("slow");
                    }
                    else {
                        var alertmsgs = "Added failed";
                        AlertMessage('growl-danger', 'Validation', alertmsgs, false, 3000);
                        $("#PostBackMsg").fadeOut("slow");
                    }
                },
                error: function (err) {
                    if (err.status === 0) {
                        window.location = '../Logout';
                    }
                    $("#PostBackMsg").fadeOut("slow");
                }
            });


        }
    }

    function Validate() {

        var flag = 0;
        var errorMeaasage = "";

        if ($("#NewsTitle").val() == "") {
            errorMeaasage = errorMeaasage + "please Enter NewsTitle </br>";
            flag = 1
        }

        if ($("#UrlTitle").val() == "") {
            errorMeaasage = errorMeaasage + "please Enter UrlTitle </br>";
            flag = 1
        }
        if ($("#PublishedDate").val() == "") {
            errorMeaasage = errorMeaasage + "please select PublishedDate </br>";
            flag = 1
        }

        if ($('#Description').summernote('code') == "" || $('#Description').summernote('code') == "<p><br></p>") {
            errorMeaasage = errorMeaasage + "please enter Description </br>";
            // $("#lblsummernote").text("please enter Description");
            flag = 1
        }

        if ($("#Topic").val() == "") {
            errorMeaasage = errorMeaasage + "please Enter Topic </br>";
            flag = 1
        }

        if ($("#EventStartDate").val() == "") {
            errorMeaasage = errorMeaasage + "please select EventStartDate </br>";
            flag = 1
        }
        if ($("#EventEndDate").val() == "") {
            errorMeaasage = errorMeaasage + "please select EventEndDate </br>";
            flag = 1
        }

        if (($("#HeaderImage").val() == "" || $("#HeaderImage").val() == undefined) ||
            ($("#LongerImage").val() == "" || $("#LongerImage").val() == undefined) ||
            ($("#ShorterImage").val() == "" || $("#ShorterImage").val() == undefined)) {
            errorMeaasage = errorMeaasage + "please Upload Image </br>";
            flag = 1;
        }


        if (flag > 0) {
            var errmsg = errorMeaasage;
            AlertMessage('growl-danger', 'Validation', errmsg, false, 3000);
            return false;
        }
        else {
            return true;
        }
    }

    function AlertMessage(class_name, title, alert, boolstick, timesec) {
        
        jQuery.gritter.add({
            title: title,
            text: alert,
            class_name: class_name,
            image: '',
            sticky: boolstick,
            time: timesec,
            before_open: function () {
                $('.gritter-item-wrapper').remove();
            }
        });
        return false;
    }

</script>



