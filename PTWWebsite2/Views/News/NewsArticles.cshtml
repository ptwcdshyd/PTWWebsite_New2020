@model PTW.DataAccess.Models.NewsDetails
@{
    Layout = "_Layout";
    ViewData["Title"] = "NewsArticles";
}
<link href="~/css/clean-blog.min.css" rel="stylesheet" />
<link href="~/css/custom.css" rel="stylesheet" />
<link href="~/css/sticky.css" rel="stylesheet" />
<link href="~/css/news-article.css" rel="stylesheet" />
<style>



    .change .bar3, .change .bar1 {
        background-color: #000 !important;
    }

    .cfff {
        color: #fff !important;
    }

    .footer-parent {
        background-color: #3A3B3E;
        /* margin-left: -23px; */
        margin-right: -15px;
    }
</style>
<div id="updatepnl">

    <div class="row">
        <div class="col-md-12">

        </div>
    </div>


    <div class="article-container no-display">
        @if (!string.IsNullOrEmpty(Model.HeaderImageUrl) && !string.IsNullOrEmpty(Model.HeaderImageName))
        {
            <img src="@string.Concat(Model.HeaderImageUrl.Replace("~",""),Model.HeaderImageName)" alt="@string.Format(Model.NewsTitle!=null?Model.NewsTitle:"")">
        }
    </div>

    <div class="container-fluid article-container">

        <div class="row">
            <div class="col-md-12">
                <div class="article-banner text-center no-hide">
                    @if (!string.IsNullOrEmpty(Model.HeaderImageUrl) && !string.IsNullOrEmpty(Model.HeaderImageName))
                    {
                        <img src="@string.Concat(Model.HeaderImageUrl.Replace("~",""),Model.HeaderImageName)" alt="@string.Format(Model.NewsTitle!=null?Model.NewsTitle:"")">
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12 article-date">
                        <p>@string.Format(Model.PublishedDate != null ? Model.PublishedDate : "")</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 article-name">
                        <p>@string.Format(Model.NewsTitle != null ? Model.NewsTitle : "")</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 article-desc">
                        <p>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Html.Raw(Model.Description)
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 text-right share-col">
                <div class="row">
                    <div class="col-md-12">
                        <p class="share-text">Share Article</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="share-icons">
                            <a href="https://twitter.com/share?ref_src=ptw&amp;text=A Message From Our CEO&amp;url=https://www.ptw.com/news/a-message-from-our-ceo&amp;via=ptw" target="_blank" rel="noopener noreferrer"><span><i class="fa fa-twitter"></i></span></a>
                            <a href="https://www.facebook.com/sharer/sharer.php?u=https://www.ptw.com/news/a-message-from-our-ceo" target="_blank" rel="noopener noreferrer"><span class="no-hide-small"><i class="fa fa-facebook"></i></span></a>
                            <a href="https://www.linkedin.com/shareArticle?mini=true&amp;url=https://www.ptw.com/news/a-message-from-our-ceo&amp;title=A Message From Our CEO&amp;source=https://ptw.com" target="_blank" rel="noopener noreferrer"><span><i class="fa fa-linkedin-square"></i></span></a>
                        </p>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-default btn-sm btn-r meet f-contact cfff" href="/contact">contact us</a>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-8 article-pagination no-hide-small">


                <a href="/News">
                    <p><i class="fa fa-long-arrow-left"></i>All News &amp; Events</p>
                </a>

                <div class="pull-right">
                    <span class="prev-next">
                        @if (!string.IsNullOrEmpty(Model.PreviousNewsUrl))
                        {
                            <a href="/news/@Model.PreviousNewsUrl.Replace(" ","-")" id="ContentPlaceHolder1_btnPrevious">
                                <p class="article-previous"><i class="fa fa-long-arrow-left"></i>Previous</p>
                            </a>
                        }

                    </span>
                    @if (!string.IsNullOrEmpty(Model.NextNewsUrl))
                    {
                        <a href="/news/@Model.NextNewsUrl.Replace(" ","-")" id="ContentPlaceHolder1_btnNext">
                            <p class="article-next">Next<i class="fa fa-long-arrow-right"></i></p>
                        </a>
                    }



                </div>

            </div>

            <div class="col-md-12 article-pagination no-display-small no-padding">
                <div class="row">
                    <div class="col-sm-12 prev-next no-padding">
                        @if (!string.IsNullOrEmpty(Model.PreviousNewsUrl))
                        {
                            <a href="/news/@Model.NextNewsUrl.Replace(" ","-")" id="ContentPlaceHolder1_btnPreviousMobile">
                                <p class="article-previous"><i class="fa fa-long-arrow-left"></i>Previous</p>
                            </a>
                        }


                        @if (!string.IsNullOrEmpty(Model.NextNewsUrl))
                        {
                            <a href="/news/@Model.NextNewsUrl.Replace(" ","-")" id="ContentPlaceHolder1_btnNextMobile">
                                <p class="article-next">Next<i class="fa fa-long-arrow-right"></i></p>
                            </a>
                        }



                    </div>
                    <div class="col-sm-12 no-padding">
                        <a href="/News">
                            <p><i class="fa fa-long-arrow-left"></i>All News &amp; Events</p>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="cxcontactus" class="col-lg-12 gray">
            <h5 class="mob-disp getInTouch">Get in touch</h5>
            <a titlevalue="6" href="/contact" class="btn btn-default btn-sm btn-r vjobs f-contact">contact us</a>
        </div>
    </div>



    <section class="panel">
    </section>


</div>

<script type="text/javascript">
    $(document).ready(function () {
        RemoveLastSlashInUrl();
    });

    function RemoveLastSlashInUrl() {
        var str = window.location.href.replace(window.location.origin, "");
        var lastchar = str.charAt(str.length - 1);
        if (lastchar == '/') {
            str = str.slice(0, -1);
            window.location = window.location.origin + str;
        }
    }
</script>
