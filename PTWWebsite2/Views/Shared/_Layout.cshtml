    <script type="text/javascript">

        var languages = ["en-US", "zh-CHS", "zh-CHT", "ja", "ko", "fr-CA"];
        function languageChange(Langauge) {

            var currentpageurl = window.location.href;
            currentpageurl = currentpageurl.replace(window.location.origin, '');


            $.each(languages, function (i, val) {

